<div class="row">
<h1>註冊會員</h1>
<div class="col-md-6 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class: "form-horizontal",role:"form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  <%= f.label(:email,"Email:",class: 'control-label col-sm-2') %>
    <div class="col-sm-10">
      <%= f.email_field(:email,class: 'form-control',autofocus: true) %>
    </div>
  </div>
  <div class="form-group">
  <%= f.label(:name,"Name:",class: 'control-label col-sm-2') %>
    <div class="col-sm-10">
      <%= f.text_field(:name,class: 'form-control',autofocus: true) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:password,"密碼:",class: 'control-label col-sm-2') %>
    <div class="col-sm-10">
      <%= f.password_field(:password,class: 'form-control', autocomplete: "off") %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:password_confirmation,"確認密碼:",class: 'control-label col-sm-2') %>
    <div class="col-sm-10">  
      <%= f.password_field(:password_confirmation,class: 'form-control', autocomplete: "off") %>
    </div>
  </div>
  <div class="form-group ">
    <div class="col-md-3 col-md-offset-3 ">
      <%= f.submit("註冊會員",class: 'btn btn-primary btn-lg btn-block') %>
    </div>
  </div>
  <div class="form-group ">
    <div class="col-sm-2"></div>
    <div class="col-sm-5">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

</div>
</div>
