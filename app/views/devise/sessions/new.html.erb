<div class="row">
<h1>登入罐頭商店</h1>

<div class="col-md-6 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{class: "form-horizontal",role:"form"}) do |f| %>
  <div class="form-group">
  <%= f.label(:email,"Email:",class: 'control-label col-sm-2') %>
    <div class="col-sm-10">
      <%= f.email_field(:email,class: 'form-control',autofocus: true) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:password,"Password:",class: 'control-label col-sm-2') %>
    <div class="col-sm-10">
      <%= f.password_field(:password,class: 'form-control', autocomplete: "off") %> 
    </div>
  </div>
  <div class="form-group ">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
  </div>
  </div>
  <div class="form-group ">
    <div class="col-md-3 col-md-offset-3 ">
      <%= f.submit("登入",class: 'btn btn-primary btn-lg btn-block') %>
    </div>
  </div>
  <div class="form-group ">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
</div>

</div>