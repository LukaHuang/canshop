<%= simple_form_for([@group,@product], html: {class: 'form-horizontal',:multipart => true }) do |f| %>
    <div class="form-group">
      <%= f.label "商品名稱", :class => "col-sm-2", :for => "product_name"  %>
      <div class="col-sm-8">
        <%= f.input_field :name, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "價格", :class => "col-sm-2", :for => "product_price"  %>
      <div class="col-sm-3">
        <%= f.input_field :price, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "簡介", :class => "col-sm-2", :for => "product_snippet"  %>
      <div class="col-sm-8">
        <%= f.input_field :snippet, :class =>  "form-control",:row => 3 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "詳細說明", :class => "col-sm-2", :for => "product_description"  %>
      <div class="col-sm-8">
        <%= f.input_field :description, :class =>  "form-control",:row => 3 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "數量", :class => "col-sm-2", :for => "product_number"  %>
      <div class="col-sm-3">
        <%= f.input_field :number, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "成本", :class => "col-sm-2", :for => "product_cost"  %>
      <div class="col-sm-3">
        <%= f.input_field :cost, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "圖片", :class => "col-sm-2", :for => "product_photo"  %>
      <div class="col-sm-3">
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>
    </div>

    
    <div class="form-actions col-md-offset-2">
      <%= f.submit "確認", :disable_with => '處理中....', :class => "btn btn-primary btn-lg " %>
    </div>
    <% end %>