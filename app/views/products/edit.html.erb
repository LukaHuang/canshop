<div class="row">
  <h2>編輯「<%= @product.name %>」</h2>
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for([@group,@product], html: {class: 'form-horizontal' }) do |f| %>
    <div class="form-group">

      <%= f.label "商品名稱", :class => "col-sm-2", :for => "product_name"  %>
      <div class="col-sm-8">
        <%= f.input_field :name, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "價格", :class => "col-sm-2", :for => "product_price"  %>
      <div class="col-sm-3">
        <%= f.input_field :price, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "數量", :class => "col-sm-2", :for => "product_number"  %>
      <div class="col-sm-3">
        <%= f.input_field :number, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "成本", :class => "col-sm-2", :for => "product_cost"  %>
      <div class="col-sm-3">
        <%= f.input_field :cost, :class =>  "form-control" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "確認送出", :disable_with => '處理中....', :class => "btn btn-primary btn-lg  btn-block" %>
    </div>
    <% end %>
  </div>
</div>