<div class="row">
  <h1>訂單清單</h1>
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-hover">
      <thead><tr>
        <th>#</th>
        <th>訂貨者</th>
        <th>寄送地址</th>
        <th>付款狀態</th>
        <th>付款方式</th>
        <th>取貨方式</th>
        <th>商品狀態</th>
        <th colspan="3"></th>
      </tr></thead>
      <tbody>
        <% @orders.each_with_index do |order,i| %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= @users[i].name %></td>
            <td><%= order.address %></td>
            <td><%= order.pay_status %></td>
            <td><%= order.pay_type %></td>
            <td><%= order.get_type %></td>
            <td><%= order.status %></td>
            <td><%= link_to '查看', order %></td>
            <td><%= link_to '修改', edit_order_path(order) %></td>
            <td><%= link_to '取消', order, method: :delete, data: { confirm: '取消訂單?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>